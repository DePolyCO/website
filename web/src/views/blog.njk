                    {% for pageEntry in pagination
                    .pages
                    .slice(activeIndex - 1, activeIndex + 1) %}
                        <li class="pagination-item {% if page.url == pagination.hrefs[ loop.index0 ] %} active pen {% endif %}">
                            <a 
