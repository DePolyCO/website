---
layout: _layout.njk
title: Career Inner
pagination:
    data: jobs
    size: 1
    alias: position
permalink: "careers/{{ position.slug.current | slugify }}/"
eleventyComputed:
    title: "{{ position.title }}"
    type: JobPosting
    meta:
        site:
            name: DePoly
            description: ""
            url: https://depoly.com
            logo:
                src: https://depoly.com/static/meta/logo.png
                width: 1200
                height: 630
                language: en-US
        image:
            src: https://depoly.com/images/page.png
---

{% from '_macros/textBlock.njk' import textBlock %}

<main data-hydra-content="careerInner" id="career-inner">
    <header id="hero" class="restrict hero" data-scroll-section>
        <div id="hero-welcome" class="hero-tag fv-mono" data-shuffle>{{ position.levels }} /</div>
        <div id="hero-title--wrapper" class="pr z0 hero-title--wrapper oh">
            <h1 id="hero-title" class="z1">
                <div class="hero-title">Weâ€™re Hiring:</div>
                <div class="hero-title">{{ position.title }}</div>
            </h1>
            <div class="df pa inset zn1 hero-grid oh"></div>
        </div>
    </header>

    {{ 
        textBlock(
            "About position",
            [
                position.description
            ],
            "about-pos"
        ) 
    }}

    <section id="details" class="restrict-xtra" data-scroll-section>
        <div class="df fc" id="details-inner">
            <div class="detail-dept detail-item df fc">
                <div class="detail-value rev">{{ position.dept }}</div>
                <div class="detail-title rev chip ttu">Department</div>
            </div>
            <div class="detail-hours detail-item df fc">
                <div class="detail-value rev">{{ position.hours }}</div>
                <div class="detail-title rev chip ttu">Hours</div>
            </div>
            <div class="detail-location detail-item df fc">
                <div class="detail-value rev">{{ position.location }}</div>
                <div class="detail-title rev chip ttu">Location</div>
            </div>
        </div>
    </section>

    <section id="responsibility" class="restrict-xtra mb-md" data-scroll-section>
        <div class="section-title rev">Responsibilities you'll be handling: </div>
        <ul class="section-list df fc">
            {% for item in position.responsibilities %}
                <li class="section-list--item">{{ item }}</li>
            {% endfor %}
        </ul>
    </section>

    <section id="skills" class="restrict-xtra mb-md" data-scroll-section>
        <div class="section-title rev">We expect you to have these skills:</div>
        <ul class="section-list df fc">
            {% for item in position.expectations %}
                <li class="section-list--item">{{ item }}</li>
            {% endfor %}
        </ul>
    </section>

    <section id="offer" class="restrict-xtra mb-md" data-scroll-section>
        <div class="section-title rev">Here's what we can offer:</div>
        <ul class="section-list df fc">
            {% for item in position.offering %}
                <li class="section-list--item">{{ item }}</li>
            {% endfor %}
        </ul>
    </section>

    <section id="apply" class="restrict df fc pr mb-md no-contain" data-scroll-section>
        <div class="df fc">
            <div class="tag ttu fv-mono" data-shuffle>Apply for this position</div>
            <div class="pa bottom left df jcb" id="see-more">
                <div id="see-more--title">Want to see more?</div>
                <a href="/careers/" class="chip ttu" id="see-more--back">Back to careers</a>
            </div>
        </div>
        <div class="pr form-wrapper">
            <div class="form-details pr" id="cv-form">
                <div class="form-title">Submit your CV</div>
                <form novalidate enctype="multipart/form-data" data-netlify="true" name="Submit CV from Role" method="POST" class="form-content">
                    <div class="df fc form-inner">
                        <div class="df fc field-col">
                            <div class="field pr">
                                <input name="First Name" class="field-input first-name" id="cv-firstname" placeholder="First Name" required type="text" data-type="name">
                                <label class="pen field-label pa" for="cv-firstname">First Name</label>
                                <label class="pen field-label--active ttu pa" for="cv-firstname">First Name</label>
                            </div>
                            <div class="field pr">
                                <input name="Last Name" class="field-input" id="cv-lastname" placeholder="Last Name" required type="text" data-type="name">
                                <label class="pen field-label pa" for="cv-lastname">Last Name</label>
                                <label class="pen field-label--active ttu pa" for="cv-lastname">Last Name</label>
                            </div>
                            <div class="field pr">
                                <input name="Email ID" class="field-input" id="cv-email" placeholder="Email Address" required type="email" data-type="email">
                                <label class="pen field-label pa" for="cv-email">Email Address</label>
                                <label class="pen field-label--active ttu pa" for="cv-email">Email Address</label>
                            </div>
                            <div class="field pr">
                                <input name="Linkedin Profile" class="field-input" id="cv-linkedin" placeholder="Linkedin Profile (Optional)" type="url" data-type="url">
                                <label class="pen field-label pa" for="cv-linkedin">Linkedin Profile (Optional)</label>
                                <label class="pen field-label--active ttu pa" for="cv-linkedin">Linkedin Profile (Optional)</label>
                            </div>
                            <div class="field field-dash pr">
                                <input name="CV File" class="cp field-input--file" id="cv-cvfile" placeholder="Upload your CV" required type="file">
                                <label class="field-label field-label--file-inner pen pa df aic">
                                    <svg>
                                        <use xlink:href="#file-icon"></use>
                                    </svg>
                                    <div class="field-label--filename">Upload your CV</div>
                                </label>
                            </div>
                            <div class="field field-dash pr">
                                <input name="Cover Letter File" class="cp field-input--file" id="cv-coverletterfile" placeholder="Upload your Cover Letter" required type="file">
                                <label class="field-label field-label--file-inner pen pa df aic">
                                    <svg>
                                        <use xlink:href="#file-icon"></use>
                                    </svg>
                                    <div class="field-label--filename">Upload your Cover Letter</div>
                                </label>
                            </div>
                        </div>
                        <div class="df">
                            <div class="field pr textarea">
                                <textarea class="field-input field-input--textarea" placeholder="Your Message" name="Message" id="cv-message" cols="30" rows="10"></textarea>
                                <label class="pen field-label pa" for="cv-message">Your Message</label>
                                <label class="pen field-label--active ttu pa" for="cv-message">Your Message</label>
                            </div>
                        </div>
                        <input type="hidden" name="{{ position.slug.current }}" value="{{ position.slug.current }}">
                    </div>
                    <button class="cta-btn" id="cv-submit">
                        <div class="pr oh btn-wrapper">
                            <div class="btn-inner" data-content="Apply for this position">Apply for this position</div>
                        </div>
                    </button>
                </form>
            </div>
            <div class="form-status pa inset df fc aic jcc">
                <div class="form-status--tick df aic jcc">
                    <svg>
                        <use xlink:href="#tick-icon"></use>
                    </svg>
                </div>
                <div class="form-status--thank ttu">Thank you, </div>
                <p class="form-status--desc">Your message is sent sucessfully and it will be answered soon</p>
            </div>
        </div>
    </section>
</main>