    <section data-scroll-section id="location" class="df fc restrict pr no-contain">
        <div class="tag ttu fv-mono" data-shuffle>Location</div>
        <div id="map" class="oh pr">
            <picture class="pr fx fx-once" id="map-picture">
                <img class="m-hide" src="/static/contact/map.jpg" alt="map">
                <img class="d-hide" src="/static/contact/map-m.jpg" alt="map">
            </picture>
            <div id="map-overlay" class="df fc pa z2 fx fx-once">
                <div id="map-overlay--text">Rue de l'Industrie 17 1950 Sion, Valais Switzerland</div>
                <a href="https://goo.gl/maps/LacBRchae6ipWJNH9" rel="noreferrer noopener" target="_blank" class="cta-btn df cp" id="map-cta">
                    <div class="pr oh btn-wrapper">
                        <div class="btn-inner" data-content="Google Maps">Google Maps</div>
                    </div>
                </a>
            </div>
        </div>
        <div class="pa bottom left" id="social-links">
            <div class="contact-title mb-extra ttu">Social Links</div>
            <ul>
                <li>
                    <a href="https://twitter.com/DePolySA" target="_blank" rel="noreferrer noopener" class="contact-link link link-solid link-dark">
