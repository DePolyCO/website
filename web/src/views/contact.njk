                                    <input name="Email ID" class="field-input" id="sample-email" placeholder="Adresse électronique " required type="email" data-type="email">
                                    <label class="pen field-label pa" for="sample-email">Adresse électronique </label>
                                    <label class="pen field-label--active ttu pa" for="sample-email">Adresse électronique </label>
