{% from '_macros/header.njk' import header %}
{% from '_macros/textBlock.njk' import textBlock %}

<main data-hydra-content="contact" id="contact">
    {{ 
        header(
            'Nous contacter', 
            "Nous sommes toujours heureux de vous parler!", 
            "/static/contact/hero.jpg", 
            "hero img"
        ) 
    }}

    <section id="form" class="restrict df fc border-bottom" data-scroll-section>
        <div id="prefer-mail" class="df fc jcb">
            <div id="prefer-mail--title" class="rev">Vous souhaitez envoyer un email au lieu de remplir un formulaire?</div>
            <ul id="contact-list" class="df fc">
                <li class="contact-item df fc" data-footer-hover="contact@depoly.ch">
                    <div class="pr fit tag-wrapper">
                        <div class="contact-title ttu">Général</div>
                        <div class="pa ttu footer-tag">Copier dans le presse-papier</div>
                    </div>
                    <div>
                        <div class="contact-link link link-solid link-dark hover-item">contact@depoly.ch</div>
                    </div>
                </li>
                <li class="contact-item df fc" data-footer-hover="careers@depoly.ch">
                    <div class="pr fit tag-wrapper">
                        <div class="contact-title ttu">Envoyer votre CV</div>
                        <div class="pa ttu footer-tag">Copier dans le presse-papier</div>
                    </div>
                    <div>
                        <div class="contact-link link link-solid link-dark hover-item">careers@depoly.ch</div>
                    </div>
                </li>
                <li class="contact-item df fc" data-footer-hover="sales@depoly.ch">
                    <div class="pr fit tag-wrapper">
                        <div class="contact-title ttu">Curieux d'un échantillon?</div>
                        <div class="pa ttu footer-tag">Copier dans le presse-papier</div>
                    </div>
                    <div>
                        <div class="contact-link link link-solid link-dark hover-item">sales@depoly.ch</div>
                    </div>
                </li>
            </ul>
        </div>
        <div id="form-list" class="df fc pr">

            <div id="dropdown-m--wrapper" class="pr top left right d-hide z1">
                <div id="dropdown-m--active" class="z1 pr">
                    <div data-value="0">Informations Générales</div>
                    <svg class="pa top right" id="dropdown-m--chevron" viewBox="0 0 13 8" fill="none">
                        <path d="M2.41.84 7 5.42 11.59.84 13 2.25l-6 6-6-6L2.41.84Z" fill="#022D42" stroke="#ECECE2" stroke-width=".3"/>
                    </svg>
                </div>
                <ul id="dropdown-m" class="pa z1">
                    <li data-value="1" class="dropdown-m--item">Envoyer votre CV</li>
                    <li data-value="2" class="dropdown-m--item">Echantillon et Devis</li>
                </ul>
                <div class="pa inset dropdown-bg zn1"></div>
            </div>

            <div id="form-underlay" class="pa inset d-hide pen"></div>

            {# General Information #}
            <div class="pr form-wrapper z0" id="general-form--wrapper">
                <details class="form-details pr" id="general-form" open>
                    <summary class="form-title m-hide">Informations Générales</summary>
                    <form novalidate data-netlify="true" name="General Information" method="POST" class="form-content">
                        <div class="df fc form-inner">
                            <div class="df fc field-col">
                                <div class="field pr">
                                    <input name="First Name" class="field-input first-name" id="general-firstname" placeholder="Prénom" required type="text" data-type="name">
                                    <label class="pen field-label pa" for="general-firstname">Prénom</label>
                                    <label class="pen field-label--active ttu pa" for="general-firstname">Prénom</label>
                                    <div class="cp pa error-icon">
                                        <svg>
                                            <use xlink:href="#err-icon"></use>
                                        </svg>
                                        <div class="error-overlay ttu pa">Merci de fournir une nom valable</div>
                                    </div>
                                </div>
                                <div class="field pr">
                                    <input name="Last Name" class="field-input" id="general-lastname" placeholder="Nom" required type="text" data-type="name">
                                    <label class="pen field-label pa" for="general-lastname">Nom</label>
                                    <label class="pen field-label--active ttu pa" for="general-lastname">Nom</label>
                                    <div class="cp pa error-icon">
                                        <svg>
                                            <use xlink:href="#err-icon"></use>
                                        </svg>
                                        <div class="error-overlay ttu pa">Merci de fournir une nom valable</div>
                                    </div>
                                </div>
                                <div class="field pr">
                                    <input name="Email ID" class="field-input" id="general-email" placeholder="Adresse électronique " required type="email" data-type="email">
                                    <label class="pen field-label pa" for="general-email">Adresse électronique </label>
                                    <label class="pen field-label--active ttu pa" for="general-email">Adresse électronique </label>
                                    <div class="cp pa error-icon">
                                        <svg>
                                            <use xlink:href="#err-icon"></use>
                                        </svg>
                                        <div class="error-overlay ttu pa">Merci de fournir une adresse mail valable</div>
                                    </div>
                                </div>
                            </div>
                            <div class="df">
                                <div class="field pr textarea">
                                    <textarea class="field-input field-input--textarea" placeholder="Votre message" name="Message" id="general-message" cols="30" rows="10"></textarea>
                                    <label class="pen field-label pa" for="general-message">Votre message</label>
                                    <label class="pen field-label--active ttu pa" for="general-message">Votre message</label>
                                </div>
                            </div>
                        </div>
                        <button class="cta-btn" id="general-submit">
                            <div class="pr oh btn-wrapper">
                                <div class="btn-inner" data-content="envoyer le message">envoyer le message</div>
                            </div>
                        </button>
                    </form>
                </details>
                <button class="pa top right form-toggle pen df aic jcc">
                    <svg>
                        <use xlink:href="#cross-icon"></use>
                    </svg>
                </button>
                <div class="form-status pa inset df fc aic jcc">
                    <div class="form-status--tick df aic jcc">
                        <svg>
                            <use xlink:href="#tick-icon"></use>
                        </svg>
                    </div>
                    <div class="form-status--thank ttu">Merci, </div>
                    <p class="form-status--desc">Votre message is sent sucessfully and it will be answered soon</p>
                </div>
            </div>

            {# Submit CV #}
