                                    </select>
                                    <div class="select-dropdown pa pen">
                                        <svg>
                                            <use xlink:href="#dropdown-arr"></use>
                                        </svg>
                                    </div>
                                </div>
                                <div class="field pr">
                                    <select class="field-input" name="Purpose" id="sample-purpose">
                                        <option value="placeholder">But de l'utilisation </option>
                                        <option value="Medical">Medical</option>
                                        <option value="Biotechnology">Biotechnology</option>
                                        <option value="Ecology">Ecology</option>
                                        <option value="Recycling">Recycling</option>
                                    </select>
                                    <div class="select-dropdown pa pen">
                                        <svg>
                                            <use xlink:href="#dropdown-arr"></use>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            <div class="df">
                                <div class="field pr textarea">
                                    <textarea class="field-input field-input--textarea" placeholder="Votre message" name="Message" id="sample-message" cols="30" rows="10"></textarea>
                                    <label class="pen field-label pa" for="sample-message">Votre message</label>
                                    <label class="pen field-label--active ttu pa" for="sample-message">Votre message</label>
                                </div>
                            </div>
